{
  "name": "@moryflow/memory-server",
  "version": "0.1.0",
  "description": "NestJS API server for AI Memory Module",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rm -f tsconfig.tsbuildinfo && nest build",
    "dev": "pnpm build && node --watch dist/main.js",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ai",
    "memory",
    "nestjs",
    "api",
    "pgvector"
  ],
  "author": "Moryflow",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/static": "^8.1.0",
    "@moryflow/memory-core": "workspace:*",
    "@nestjs/common": "^11.1.10",
    "@nestjs/core": "^11.1.10",
    "@nestjs/platform-fastify": "^11.1.10",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "dotenv": "^16.5.0",
    "openai": "^5.8.2",
    "pg": "^8.16.0",
    "prisma": "^7.2.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.3",
    "@nestjs/testing": "^11.1.10",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
